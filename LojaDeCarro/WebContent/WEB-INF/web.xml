<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>LojaDeCarro</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <filter>
		<filter-name>FiltroSeguranca</filter-name>
		<filter-class>br.com.filter.FiltroSeguranca</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FiltroSeguranca</filter-name>
		<url-pattern>/*</url-pattern>
		
</filter-mapping>

  <servlet>
    <servlet-name>carro</servlet-name>
    <servlet-class>br.com.servlet.CarroServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>carro</servlet-name>
    <url-pattern>/carro</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cliente</servlet-name>
    <servlet-class>br.com.servlet.ClienteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cliente</servlet-name>
    <url-pattern>/cliente</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>br.com.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>venda</servlet-name>
    <servlet-class>br.com.servlet.VendaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>venda</servlet-name>
    <url-pattern>/venda</url-pattern>
  </servlet-mapping>
  
<!--   :) nÃ£o posso utilizar o try{}catch(){} para trar uma rutimer, mas posso redirecionar para uma pagina especificar! :) -->
  <error-page>
  <exception-type>java.lang.NumberFormatException</exception-type>
  
  <location>/jsp/problema.jsp</location>
  
  </error-page>
 
  
</web-app>